<%include partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; padding-top: 5%;">Create a New Blog Post</h1>
        <div class="well" style="width: 50%; margin: 0 auto;">
            <div>
                <form action="/blogs" method="POST">
                    <div class="form-group">Title
                        <input class="form-control" type="text" name="blog[title]" placeholder="Blog Post 1">
                    </div>
                    <div class="form-group">Image
                        <input class="form-control" type="text" name="blog[image]" placeholder="http://...">
                    </div>
                    <div class="form-group">Blog Content
                        <textarea class="form-control" name="blog[body]"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-default btn-block">Submit</button>
                    </div>
                </form>
                <a href="/blogs">Go Back</a>
            </div>
        </div>
    </div>
</div>

<%include partials/footer%>